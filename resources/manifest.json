{
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
    "name": "Admin Shopify Search File",
    "version": "1.0.0.1",
    "default_locale": "en",
    "description": "Search all files on shopify",
    "author": "Thong Pham",
    "background": {
        "persistent": false,
        "scripts": ["assets/js/vendors.js", "assets/js/background.js"]
    },
    "content_scripts": [
        {
            "matches": ["https://*.myshopify.com/admin/themes/*"],
            "js": ["assets/js/vendors.js", "assets/js/content_script.js"],
            "css": ["assets/css/content_script.css"],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "icons/128x128.png",
        "32": "icons/32x32.png",
        "48": "icons/48x48.png",
        "128": "icons/128x128.png"
    },
    "permissions": ["tabs", "storage"]
}
